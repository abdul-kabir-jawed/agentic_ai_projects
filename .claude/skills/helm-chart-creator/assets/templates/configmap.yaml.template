{{- if .Values.configMap.enabled }}
apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ include "CHART_NAME.fullname" . }}
  labels:
    {{- include "CHART_NAME.labels" . | nindent 4 }}
data:
  {{- range $key, $value := .Values.configMap.data }}
  {{ $key }}: |
    {{- if kindIs "string" $value }}
    {{ $value | nindent 4 }}
    {{- else }}
    {{ $value | toYaml | nindent 4 }}
    {{- end }}
  {{- end }}
{{- end }}
